<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="goal.mapper.UserMapper">
	<resultMap type="goal.vo.PostVO" id="postVO">
		<id property="u_id" column="u_id"/>
		<id property="b_content" column="b_content"/>
		<id property="b_date" column="b_date"/>
	</resultMap>
	<resultMap type="goal.vo.UserVO" id="userVO">
		<id property="uno" column="uno"/>
		<id property="u_id" column="u_id"/>
		<id property="u_name" column="u_name"/>
		<id property="u_password" column="u_password"/>
		<id property="u_mail" column="u_mail"/>
		<id property="u_number" column="u_number"/>
		<id property="u_birthdate" column="u_birthdate"/>
	</resultMap>
	
	<resultMap type="goal.vo.ReplyVO" id="replyVO">
		<id property="r_writer" column="r_writer"/>
		<id property="r_content" column="r_content"/>
		<id property="r_date" column="r_date"/>
	</resultMap>
	
	<select id="read" parameterType="goal.vo.UserVO" resultType="String">
	<![CDATA[
		select u_id from GK_USER
		where u_id = #{u_id} and u_password = #{u_password}
	]]>
	</select>
	<select id="readUser" parameterType="goal.vo.UserVO" resultMap="userVO">
		select * from GK_USER where u_id = #{u_id} and u_password = #{u_password}
	</select>
	<select id="readId" parameterType="String" resultType="String">
	<![CDATA[
		select u_id from GK_USER
		where u_id = #{u_id}
	]]>
	</select>
	<insert id="register" parameterType="goal.vo.UserVO">
		insert into GK_USER(uno, u_id, u_name, u_password, u_mail, u_number, u_birthdate) values
		(GK_USER_SEQ.nextval, #{u_id}, #{u_name}, #{u_password}, #{u_mail}, #{u_number}, #{u_birthdate})
	</insert>
	
	<select id="listFriend" parameterType="goal.vo.UserVO" resultType="goal.vo.UserVO">
      <![CDATA[
         select * from GK_FRIEND where uno=#{uno}
      ]]>
   </select>
   
   <select id="getPost" parameterType="goal.vo.PostVO" resultMap="postVO">
     <![CDATA[
        select  U.u_id, B.b_content,B.B_DATE, bno from Gk_BOARD B, GK_USER U where B.uno = U.uno 
      ]]>
   </select>
   
	<select id="getReply" parameterType="goal.vo.ReplyVO" resultMap="replyVO">	
     <![CDATA[
       select * from(select rownum rn, t.* from(select bno, r_writer ,r_content ,r_date from GK_COMMENT where bno = ${bno} ORDER BY r_date DESC) t) where rn<=2
      ]]>
   </select>
	
</mapper>